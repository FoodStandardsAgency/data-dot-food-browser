<!DOCTYPE html>
<html lang="en">
  <head>
    <% if @view_state && @view_state.respond_to?(:dataset) && @view_state.dataset %>
      <title><%= @view_state.dataset.title %></title>
      <meta name="description" content="<%= @view_state.dataset.description %>">
      <meta name="keywords" content="<%= @view_state.dataset.keywords.join(' ') %>">
    <% elsif @view_state && @view_state.respond_to?(:page_title) && @view_state.page_title %>
      <title><%= @view_state.page_title %></title>
    <% else %>
      <title>FSA Open Data Catalog Browser</title>
    <% end %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="author" content="Food Standards Agency">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= render partial: 'shared/gtm_script' %>
    <%= javascript_pack_tag 'application' %>
    <%= render 'application/favicon' %>
  </head>

  <body>
    <%= render partial: 'shared/gtm_noscript' %>
    <%= render partial: 'shared/page_header' %>
    <%= render partial: 'shared/phase_header' %>
    <main id="main" class="wrapper content" role="main">
      <%= render partial: 'shared/highlighted_datasets' if @view_state && @view_state.show_highlighted? %>
      <%= yield %>
    </main>
    <%= render partial: 'shared/page_footer' %>
  </body>
</html>
