.c-dataset-keywords
  - if show_keywords
    - dataset.keywords.each do |keyword|
      %span.o-dataset-keyword
        = dataset_keyword_filter(keyword, @view_state.prefs)
  - if show_activities
    - dataset.activities.each do |activity|
      %span.o-dataset-keyword
        = dataset_activity_filter(activity, @view_state.prefs)
